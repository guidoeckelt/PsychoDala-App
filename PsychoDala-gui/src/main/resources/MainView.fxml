<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" style="-fx-border-color: #000; -fx-border-width: 2px;" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="drawingScene" height="400.0" width="400.0" />
         </children>
      </VBox>
   </center>
   <top>
      <VBox>
         <children>
            <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem fx:id="newDrawing" mnemonicParsing="false" text="New Drawing" />
                        <MenuItem fx:id="save" mnemonicParsing="false" text="Save" />
                        <MenuItem fx:id="openDrawing" mnemonicParsing="false" text="Open Drawing" />
                        <MenuItem fx:id="exportAs" mnemonicParsing="false" text="Save As" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="View">
                     <items>
                        <MenuItem fx:id="switchRenderState" mnemonicParsing="false" text="switchRenderState" />
                        <Menu mnemonicParsing="false" text="Background">
                           <items>
                            <MenuItem fx:id="defaultB" mnemonicParsing="false" text="Default" />
                              <MenuItem fx:id="blackWhiteTiles" mnemonicParsing="false" text="BlackWhiteTiles" />
                           </items>
                        </Menu>
                     </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="?">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Help" />
                        <MenuItem mnemonicParsing="false" text="About Us" />
                        <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
</BorderPane>
